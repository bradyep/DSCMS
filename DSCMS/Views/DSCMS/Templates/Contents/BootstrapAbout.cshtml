@model DSCMS.Models.Content

@{
    Layout = ViewData["Layout"] as string;
}

<div class="col-sm-8 blog-main">

    <div class="blog-post">
        <h2 class="blog-post-title">@Model.Title</h2>
        <p class="blog-post-meta">@Html.DisplayFor(model => model.CreationDate) by <a href="#">@(Model.CreatedByUser?.DisplayName ?? "Unknown")</a></p>

        @Html.Raw(Model.Body)

    </div><!-- /.blog-post -->

    <nav>
        <ul class="pager">
            <li><a href="/about">Return to About</a></li>
        </ul>
    </nav>

</div><!-- /.blog-main -->