@{
    ViewData["Title"] = "Welcome to DSCMS";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center">Welcome to DSCMS</h1>
                </div>
                <div class="card-body">
                    <p class="lead text-center">Your Dynamic Content Management System is running!</p>
                    
                    <div class="alert alert-info" role="alert">
                        <h4 class="alert-heading">Getting Started</h4>
                        <p>It looks like this is a fresh installation. To get started with your CMS, you'll need to:</p>
                        <hr>
                        <ol>
                            <li>Create some <strong>Layouts</strong> to define the overall page structure</li>
                            <li>Create <strong>Templates</strong> to define how content is displayed</li>
                            <li>Create <strong>Content Types</strong> to organize your content</li>
                            <li>Add some <strong>Content</strong> to your site</li>
                        </ol>
                    </div>

                    <div class="text-center">
                        <h3>Quick Links</h3>
                        <div class="row mt-3">
                            <div class="col-md-6 mb-3">
                                <a href="/Admin" class="btn btn-primary btn-lg btn-block">
                                    <i class="fas fa-cog"></i> Admin Panel
                                </a>
                                <small class="text-muted d-block mt-1">Manage your CMS content and settings</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <a href="/Admin/ContentTypes" class="btn btn-success btn-lg btn-block">
                                    <i class="fas fa-plus"></i> Create Content Type
                                </a>
                                <small class="text-muted d-block mt-1">Start by creating your first content type</small>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <h4>System Information</h4>
                        <ul class="list-unstyled">
                            <li><strong>Framework:</strong> ASP.NET Core / .NET 9</li>
                            <li><strong>Database:</strong> SQLite</li>
                            <li><strong>Environment:</strong> @ViewContext.HttpContext.RequestServices.GetService<IWebHostEnvironment>()?.EnvironmentName</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-block {
        display: block;
        width: 100%;
    }
    
    .card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>