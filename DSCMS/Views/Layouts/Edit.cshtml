@model DSCMS.Models.Layout

@{
  ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
  <div class="form-horizontal">
    <h4>Layout</h4>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="LayoutId" />
    <div class="form-group">
      <label asp-for="Name" class="col-md-2 control-label"></label>
      <div class="col-md-10">
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger" />
      </div>
    </div>
    <div class="form-group">
      <label asp-for="FileLocation" class="col-md-2 control-label"></label>
      <div class="col-md-10">
        <input asp-for="FileLocation" class="form-control" />
        <span asp-validation-for="FileLocation" class="text-danger" />
        <small class="form-text text-muted">Path to the external layout file (e.g., /Views/DSCMS/Layouts/_BootstrapBlog.cshtml)</small>
      </div>
    </div>
    <div class="form-group">
      <label asp-for="FileContents" class="col-md-2 control-label"></label>
      <div class="col-md-10">
        <textarea asp-for="FileContents" class="form-control" rows="10" placeholder="Optional: Inline layout content (leave empty to use external file)"></textarea>
        <span asp-validation-for="FileContents" class="text-danger" />
        <small class="form-text text-muted">
          @if (Model.FileContents != null)
          {
            <span class="text-success">Has inline content (@Model.FileContents.Length characters)</span>
          }
          else
          {
            <span class="text-info">Uses external file reference</span>
          }
        </small>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Save" class="btn btn-default" />
      </div>
    </div>
  </div>
</form>

<div>
  <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
