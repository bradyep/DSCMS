@model IEnumerable<DSCMS.Models.Layout>

@{
  ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
  <a asp-action="Create">Create New</a>
</p>
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Name)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.FileLocation)
      </th>
      <th>
        Has Inline Content
      </th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @(item.Name ?? "[No Name]")
        </td>
        <td>
          @(item.FileLocation ?? "[No File Location]")
        </td>
        <td>
          @(item.FileContents != null ? "Yes" : "No")
        </td>
        <td>
          <a asp-action="Edit" asp-route-id="@item.LayoutId">Edit</a> |
          <a asp-action="Details" asp-route-id="@item.LayoutId">Details</a> |
          <a asp-action="Delete" asp-route-id="@item.LayoutId">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>
