@model DSCMS.Models.Template

@{
  ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
  <h4>Template</h4>
  <hr />
  <dl class="dl-horizontal">
    <dt>
      @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd>
      @(Model.Name ?? "[No Name]")
    </dd>
    <dt>
      Layout
    </dt>
    <dd>
      @(Model.Layout?.Name ?? "[No Layout]")
    </dd>
    <dt>
      @Html.DisplayNameFor(model => model.IsForContentType)
    </dt>
    <dd>
      @(Model.IsForContentType > 0 ? "ContentType" : "Content")
    </dd>
    <dt>
      @Html.DisplayNameFor(model => model.FileLocation)
    </dt>
    <dd>
      @(Model.FileLocation ?? "[No File Location]")
    </dd>
    <dt>
      Has Inline Content
    </dt>
    <dd>
      @(Model.FileContents != null ? "Yes" : "No")
    </dd>
    @if (Model.FileContents != null)
    {
      <dt>
        Content Preview
      </dt>
      <dd>
        <pre style="max-height: 200px; overflow-y: auto; background-color: #f5f5f5; padding: 10px; border: 1px solid #ddd;">@Model.FileContents</pre>
      </dd>
    }
  </dl>
</div>
<div>
  <a asp-action="Edit" asp-route-id="@Model.TemplateId">Edit</a> |
  <a asp-action="Index">Back to List</a>
</div>
