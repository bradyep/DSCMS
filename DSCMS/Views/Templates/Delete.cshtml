@model DSCMS.Models.Template

@{
  ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
  <h4>Template</h4>
  <hr />
  <dl class="dl-horizontal">
    <dt>
      @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd>
      @(Model.Name ?? "[No Name]")
    </dd>
    <dt>
      Layout
    </dt>
    <dd>
      @(Model.Layout?.Name ?? "[No Layout]")
    </dd>
    <dt>
      @Html.DisplayNameFor(model => model.IsForContentType)
    </dt>
    <dd>
      @(Model.IsForContentType > 0 ? "ContentType" : "Content")
    </dd>
    <dt>
      @Html.DisplayNameFor(model => model.FileLocation)
    </dt>
    <dd>
      @(Model.FileLocation ?? "[No File Location]")
    </dd>
    <dt>
      Has Inline Content
    </dt>
    <dd>
      @(Model.FileContents != null ? "Yes" : "No")
    </dd>
  </dl>

  <form asp-action="Delete">
    <div class="form-actions no-color">
      <input type="submit" value="Delete" class="btn btn-default" /> |
      <a asp-action="Index">Back to List</a>
    </div>
  </form>
</div>
